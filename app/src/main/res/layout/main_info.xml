<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_box"
    android:padding="24dp"
    android:layout_marginHorizontal="64dp"
    android:layout_marginTop="24dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:text="Humidity"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_humidity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="|" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:id="@+id/humidity"
            android:paddingStart="24dp"
            android:text="@string/def_val" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:text="Pressure"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_pressure" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="|" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:id="@+id/pressure"
            android:paddingStart="24dp"
            android:text="@string/def_val" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:text="Wind"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_wind" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="|" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/urbanist_family"
            android:textColor="@color/white"
            android:id="@+id/wind"
            android:paddingStart="24dp"
            android:text="@string/def_val" />
    </LinearLayout>

</LinearLayout>